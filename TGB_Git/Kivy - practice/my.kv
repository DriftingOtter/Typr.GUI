#:import utils kivy.utils

<Button>
    background_normal: ''
    background_color: utils.get_color_from_hex('#cf7e7e')
    font_size:50
    size_hint: 1.0,.5

<TextInput>
    multiline: False

<Label>
    font_size:50

    italic: True

    outline_color: (0,0,0,)

    outline_width: 5

    size_hint: 1.0,.5

    background_normal: ''

    background_color: (209/255, 115/255, 115/255, 1)

    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos

    color: (1, 1, 1, 1) # To change text color



<myBox>
    BoxLayout:
        orientation:'vertical'

        size: root.width,root.height

        padding: ('10dp', '10dp', '10dp', '10dp')

        spacing: '10dp'


        Label:
            text:'Label 1'

        TextInput:
            text:'Text Input Box 1'

        Label:
            text:'Label 2'

        TextInput:
            text:'Text Input Box 2'

        Button:
            text:'Button 2'